{
    "name": "imperia",
    "module": "src/main.ts",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "start": "bun run src/main.ts",
        "dev": "bun run --watch src/main.ts",
        "test": "bun test",
        "lefthook": "lefthook install",
        "-- CODE QUALITY": "-------------------------",
        "format": "biome format --write ./src",
        "format:check": "biome format ./src",
        "lint": "biome check --write ./src",
        "lint:unsafe": "biome check --write --unsafe ./src",
        "lint:check": "biome check ./src",
        "-- DATABASE": "-------------------------",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:generate": "drizzle-kit generate",
        "-- DOCKER": "-------------------------",
        "docker:infra:up": "docker-compose --file docker/infra/docker-compose.yml --env-file .env up -d",
        "docker:infra:down": "docker-compose --file docker/infra/docker-compose.yml --env-file .env down"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.8.3",
        "@types/bun": "latest",
        "drizzle-kit": "^0.23.0",
        "lefthook": "^1.7.2"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@sapphire/discord.js-utilities": "^7.3.0",
        "@sapphire/framework": "^5.2.1",
        "@sapphire/plugin-logger": "^4.0.2",
        "@sapphire/plugin-subcommands": "^6.0.3",
        "@sapphire/utilities": "^3.16.2",
        "@silvia-odwyer/photon-node": "^0.3.3",
        "@t3-oss/env-core": "^0.10.1",
        "dayjs": "^1.11.11",
        "discord.js": "^14.15.3",
        "drizzle-cuid2": "^1.0.5",
        "drizzle-orm": "^0.32.0",
        "ioredis": "^5.4.1",
        "postgres": "^3.4.4",
        "zod": "^3.23.8"
    }
}
